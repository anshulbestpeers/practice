<%= form_with model: article do |form| %>
  <div>
  <%= form.label :Article_user %><br>
  <%= form.text_field :Article_user %>
  <% article.errors.full_messages_for(:title).each do |message| %>
    <div><%= message %></div>
  <% end %>
  </div>

    <div>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
      <% article.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  
    <div>
      <%= form.label :body %><br>
      <%= form.text_area :body %><br>
      <% article.errors.full_messages_for(:body).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
    <%= form.label :email %><br>
    <%= form.email_field :email %><br>
    <% article.errors.full_messages_for(:email).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  
    
    <div>
        <%= form.label :status %><br>
        <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
    </div>

    <div>
    <%= form.check_box :terms_of_service %>
    <% article.errors.full_messages_for(:terms_of_service).each do |message| %>
      <div><%= message %></div>
      <% end %>
    <%= form.submit %>
    
    </div>


  <% end %>
  